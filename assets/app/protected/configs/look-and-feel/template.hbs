{{#container-block}}
<h4 class='color-default m-b-1'>Texts</h4>
<div class="form-group row">
  <div class="col-sm-2">
    <p class="confirm-input-item color-primary in-bl fl va-sub">Title</p>
  </div>
  <div class="col-sm-3">{{input-confirm value=configController.title placeholder=configController.title type="text"}}</div>
</div>
{{/container-block}}

{{#container-block}}
<h4 class='color-default m-b-1'>Images</h4>
<div class="form-group row">
  <div class="col-sm-2">
    <p class="confirm-input-item color-primary in-bl fl va-sub">Favicon path</p>
  </div>
  <div class="col-sm-3">{{input-confirm value=configController.favIconPath type="text" }}</div>
</div>

<div class="form-group row">
  <div class="col-sm-2">
    <p class="confirm-input-item color-primary in-bl fl va-sub">Logo path</p>
  </div>
  <div class="col-sm-3">{{input-confirm value=configController.logoPath type="text"}}</div>
</div>
{{/container-block}}

{{#container-block}}
<h4 class='color-default m-b-1'>Colors</h4>
<div class="form-group row">
  <div class="col-sm-2">
    <p class="confirm-input-item color-primary in-bl fl va-sub">Primary color (hex)</p>
  </div>
  <div class="col-sm-3">{{spectrum-color-picker preferredFormat="hex" showInput=true color=configController.primaryColor onMove=(action "liveChangeColor")}}</div>
</div>
{{/container-block}}
