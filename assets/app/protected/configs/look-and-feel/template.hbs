<div class="form-group row">
  <div class="col-sm-2">
    <p class="confirm-input-item color-primary in-bl fl">Title</p>
  </div>
  <div class="col-sm-3">{{input-confirm value=configController.title placeholder=configController.title type="text"}}</div>
</div>

<div class="form-group row">
  <div class="col-sm-2">
    <p class="confirm-input-item color-primary in-bl fl">Favicon path</p>
  </div>
  <div class="col-sm-3">{{input-confirm value=configController.favIconPath type="text" }}</div>
</div>

<div class="form-group row">
  <div class="col-sm-2">
    <p class="confirm-input-item color-primary in-bl fl">Logo path</p>
  </div>
  <div class="col-sm-3">{{input-confirm value=configController.logoPath type="text"}}</div>
</div>

<div class="form-group row">
  <div class="col-sm-2">
    <p class="confirm-input-item color-primary in-bl fl">Primary color (hex)</p>
  </div>
  <div class="col-sm-3">{{spectrum-color-picker preferredFormat="hex" showInput=true color=configController.primaryColor onMove=(action "liveChangeColor") onChange=(action "colorRefresh")}}</div>
</div>
