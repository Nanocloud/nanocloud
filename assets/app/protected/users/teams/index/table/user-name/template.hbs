<div class='rel'>
  {{record.firstName}} {{record.lastName}}
  {{#if (is-equal targetObject.session.user.id record.id)}}
    <i class="material-icons va-bottom color-primary">verified_user</i>
    <span class='color-primary'>(Team Admin)</span>
  {{else}}
    {{#if record.isActivated}}
      {{#if record.isTeamAdmin}}
        <i class="material-icons va-bottom color-primary">verified_user</i>
        <span class='color-primary'>(Team Admin)</span>
      {{/if}}
    {{/if}}
  {{/if}}
</div>
