<div class="row">
  <div class="col-md-6">
    <h2>Manage members</h2>
      <table class="table m-t-2">
        <thead>
          <tr>
            <th>Name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          {{#each users as |user|}}
            <tr>
              <td scope="row">
                {{user.fullName}}
              </td>
              <td>
                {{toggle-item-from-list list=group.members item=user property='id' addAction="addMember" removeAction="removeMember"}}
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
  </div>
</div>

{{outlet}}
