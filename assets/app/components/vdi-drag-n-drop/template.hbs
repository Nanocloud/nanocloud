{{yield (hash
    state=state
    stopUpload=(action 'cancelUpload')
    progress=progress
    uploading=uploading
    queue=queue
    flushHistory=(action 'flushHistory'))
}}
<div class='drag-n-drop-area transition-enabled-2
  {{ if show "state-show" "state-hide" }}'>
  <div class='centered'>
    <span class='text transition-enabled-2'>Drop your file</span>
  </div>
</div>
